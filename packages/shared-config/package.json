{
  "name": "@speccursor/shared-config",
  "version": "0.1.0",
  "description": "Shared configuration management for SpecCursor",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:coverage": "jest --coverage",
    "test:property": "jest --testPathPattern=property",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:smoke": "jest --testPathPattern=smoke",
    "test:health": "jest --testPathPattern=health",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "convict": "^6.2.4",
    "dotenv-expand": "^10.0.0",
    "@speccursor/shared-types": "workspace:*"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
} 
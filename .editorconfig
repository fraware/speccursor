root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{js,ts,jsx,tsx,json,yml,yaml}]
indent_size = 2

[*.{py}]
indent_size = 4

[*.{rs}]
indent_size = 4

[*.{go}]
indent_size = 4

[*.{lean}]
indent_size = 2

[*.{md}]
trim_trailing_whitespace = false

[*.{dockerfile,Dockerfile}]
indent_size = 4

[*.{tf,tfvars}]
indent_size = 2

[Makefile]
indent_style = tab 